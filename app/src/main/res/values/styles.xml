<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardBackgroundColor">#efe5ff</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">8dp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="background">@color/purple_200</item>
        <item name="android:windowBackground">@color/purple_200</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="normalText.Bold" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText.Small" >
        <item name="android:textSize">10sp</item>
    </style>
    <style name="normalText.Small.Bold" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="normalText.Large" >
        <item name="android:textSize">16sp</item>
    </style>
    <style name="normalText.Large.Bold" >
        <item name="android:textStyle">bold</item>
    </style>
</resources>